---
import Layout from '@layouts/Layout.astro';
import Homepage from '@components/Pages/Homepage.jsx';
import Seo from '@components/Seo.jsx';

let data = {};

try {
  const response = await fetch(import.meta.env.PUBLIC_DEGA_API_URL, {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json',
      'X-Space': import.meta.env.PUBLIC_SPACE_ID,
      'X-Dega-API-Key': import.meta.env.PUBLIC_DEGA_API_KEY,
    },
    body: JSON.stringify({
      query: `
      query Homepage {
    space {
      site_address
      site_title
      name
    }
    featuredCategories(featuredCount: 4, postLimit: 4) {
      nodes {
        id
        slug
        name
        description
        description_html
        meta_fields
        medium {
          url
          dimensions
        }
        posts {
          nodes {
            users {
              id
              first_name
              last_name
              slug
            }
            categories {
              slug
              name
            }
            medium {
              alt_text
              url
              dimensions
            }
            published_date
            id
            status
            subtitle
            title
            slug
            excerpt
          }
        }
      }
    }
    posts {
      nodes {
        users {
          id
          first_name
          last_name
          display_name
          slug
        }
        categories {
          slug
          name
        }
        medium {
          alt_text
          url
          dimensions
        }
        published_date
        id
        status
        subtitle
        title
        slug
        excerpt
      }
    }
  }
      `,
    }),
  });

  if (response.status !== 200) {
    throw new Error('Failed to fetch data. Response code: ' + response.status);
  }
  const json = await response.json();
  data = json.data;
} catch (e) {
  console.log(e);
}
---

<Layout>
  <Homepage data={data} />
</Layout>
<Seo title={data?.space?.name} client:load />